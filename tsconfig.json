{
    "compilerOptions":
    {
        "outDir": "./dist",
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "moduleSuffixes": [""],
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths":
        {
            "@/*": ["./*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["./node_modules"]
}